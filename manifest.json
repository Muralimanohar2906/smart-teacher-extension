{
  "manifest_version": 3,
  "name": "Smart Teacher",
  "version": "1.0.0",
  "description": "Generate Smart Quiz and Smart Notes from YouTube lectures using Gemini.",
  "icons": { "128": "icons/icon128.png" },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": { "service_worker": "ui/background.js" },
  "action": { "default_popup": "popup/popup.html" },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["ui/content_script.js"],
      "css": ["ui/inject.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ui/overlay.html", "ui/ai_bridge.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
